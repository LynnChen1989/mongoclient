extends:
  - airbnb
  - plugin:meteor/recommended

plugins:
  - meteor

settings:
  import/resolver: meteor
  import/core-modules: [ meteor ]

rules:
  import/prefer-default-export: 0
  import/extensions: 0
  no-useless-escape: 0
  import/no-absolute-path: 0
  no-param-reassign: 0
  max-len: [2, 200, 4]
  no-underscore-dangle: 0
  func-names: 0
  comma-dangle: 0
  object-curly-newline: 0
  consistent-return: 0
  function-paren-newline: 0
  func-style: [2, 'expression']

parserOptions:
  ecmaVersion: 9
  sourceType: module

env:
  amd: true
  browser: true
  es6: true
  jquery: true
  meteor: true
  node: true
